<UserControl x:Class="FrontPage.Pages.ListaDumps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
              Foreground="#FFE0E0E0">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1E2B3C" Offset="0" />
            <GradientStop Color="#FF0F1721" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Background>

    <UserControl.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <TextBlock Text="Dumps Gerais" FontWeight="Bold" FontSize="16" />

        <DataGrid x:Name="dgConexoes" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,10">
            <DataGrid.Columns>
                <!-- Checkbox de seleção -->
                <DataGridTemplateColumn Header="Selecionar" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Selecionado,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Name="cbConexoes" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Colunas de dados -->
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" ElementStyle="{StaticResource CenteredCellStyle}" />
                <DataGridTextColumn Header="Caminho" Binding="{Binding Caminho}" Width="*" ElementStyle="{StaticResource CenteredCellStyle}" />
                <DataGridTextColumn Header="Sistema" Binding="{Binding Sistema}" Width="*" ElementStyle="{StaticResource CenteredCellStyle}" />

                <!-- Ações -->
                <DataGridTemplateColumn Header="Ações">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Editar" Click="EditarCaminho_Click" Margin="2" />
                                <Button Content="Excluir" Click="ExcluirCaminho_Click" Margin="2" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Grid de botões-->
        <StackPanel Grid.Row="2">
            <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,5">
                <!-- Botões (direita) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" DockPanel.Dock="Right">
                    <Button Content="Salvar novo" Click="SalvarNovo_Click" Width="120" MaxWidth="120" Height="25" MaxHeight="40" Margin="5,5,5,20" Background="#FF64B45A" />
                    <Button Name="ExecDumps" Content="Exec.Dumps" Click="ListaConexoes_Click" Width="120" MaxWidth="120" MaxHeight="40" Margin="5,5,5,20" Background="#FF5AA0D2" />
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>